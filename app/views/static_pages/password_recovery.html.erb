<div class="container_12">

  <div class="grid_6 prefix_3">

    <div class="form_head">
      <img src="/assets/AGS_Logo_02.png" width="290px">
    </div>

  </div>


  <div class="grid_6 prefix_3">

    <%= form_tag users_url, method: 'post' do%>

      <div class="grid_6">
        <strong>Forgot your username or password?</strong>
        <p>Enter your email address.</p>
        <%= label_tag %>
        <%= text_field_tag :email , nil, placeholder: "Email Address", class: "input_format", title: "Please enter your email address or <a href= #{signup_url}>create</a> an account." %>
      </div>

      <div class="grid_6 form_submit">
        <%= submit_tag "Submit", class: "button_format" %>
      </div>

    <% end %>

  </div>

</div>
