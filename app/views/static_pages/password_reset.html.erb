<div class="container_12">

  <div class="grid_6 prefix_3">

    <div class="form_head">
      <img src="/assets/AGS_Logo_02.png" width="290px">
    </div>

  </div>


  <div class="grid_6 prefix_3">

    <%= form_tag users_url, method: 'post' do%>

      <div class="grid_6">
        <strong>Enter a new password</strong>
        <%= label_tag %>
        <%= password_field_tag :password , nil, placeholder: "Password", class: "input_format", title: "Please enter your password." %>
      </div>

      <div class="grid_6 form_submit">
        <%= submit_tag "Reset password", class: "button_format" %>
      </div>

    <% end %>

  </div>

</div>
