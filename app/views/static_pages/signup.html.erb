<div class="container_12">

<!--   <div class="grid_3 alpha"></div> -->

  <div class="grid_6 prefix_3">

    <div class="form_head">
      <img src="/assets/AGS_Logo_02.png" width="290px">
    </div>

  </div>

  <div class="grid_6 prefix_3">


    <%= form_tag do%>

    <div class="grid_3 alpha">
      <%= label_tag %>
      <%= text_field_tag :name , nil, placeholder: "Name", class: "input_format" %>

      <%= label_tag %>
      <%= text_field_tag :username , nil, placeholder: "Username", class: "input_format" %>

      <%= label_tag %>
      <%= text_field_tag :country_club , nil, placeholder: "Your Country Club", class: "input_format" %>

      <%= label_tag %>
      <%= date_field_tag :birthday , nil, placeholder: "Birthday", class: "input_format" %>
    </div>

    <div class="grid_3 omega">
      <%= label_tag %>
      <%= text_field_tag :email , nil, placeholder: "Email Address", class: "input_format" %>

      <%= label_tag %>
      <%= password_field_tag :username , nil, placeholder: "Password", class: "input_format" %>

      <%= label_tag %>
      <%= number_field_tag :handicap, nil, placeholder: "Handicap", class: "input_format" %>

      <%= label_tag %>
      <%= file_field_tag :picture, placeholder: "Upload Profile Pictrue", class: "input_format" %>
    </div>

    <div class="clear"></div>

    <div class="grid_6 form_submit">

      <%= check_box_tag :terms %>
      <%= label_tag :terms, "Agree to Terms and Conditions", class: "terms" %>

      <br>

      <%= submit_tag "Sign up", class: "button_format" %>

    </div>

    <% end %>

  </div>


<!--   <div class="grid_3 omega"></div> -->


</div>
